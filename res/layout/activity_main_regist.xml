<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/whrite"
    android:minWidth="280dip"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >

    <LinearLayout
        android:id="@+id/regist_linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/logincreat_down"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/regist_textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号注册" />

        <TextView
            android:id="@+id/regist_textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="创建新账号"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/regist_linearlayout6"
        android:layout_width="wrap_content"
        android:layout_height="6dp"
        android:layout_below="@+id/regist_linearlayout"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >
    </LinearLayout>

    <ScrollView
        android:id="@+id/regist_scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regist_linearlayout6" >

        <LinearLayout
            android:id="@+id/regist_linearlayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/regist_linearlayout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/regist_textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用  户  名:" />

                <EditText
                    android:id="@+id/regist_editText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/regist_linearlayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/regist_textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密        码:" />

                <EditText
                    android:id="@+id/regist_editText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPassword" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/regist_linearlayout4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/regist_textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认密码:" />

                <EditText
                    android:id="@+id/regist_editText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPassword" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/regist_linearlayout5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/regist_textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服  务  器:" />

                <EditText
                    android:id="@+id/regist_editText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/regist_linearlayout7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regist_scrollView1"
        android:layout_centerVertical="true" >

        <Button
            android:id="@+id/regist_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Button" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="2" >
        </LinearLayout>

        <Button
            android:id="@+id/regist_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Button" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/regist_progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regist_linearlayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="gone" />

</RelativeLayout>